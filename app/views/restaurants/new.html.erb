<div class="container">
  <br>
  <h1>Add a New Restaurant</h1>
  <br>
    <%= simple_form_for [@restaurant] do |f| %>
      <%= f.input :name %>
      <br>
      <%= f.input :address %>
      <br>
      <%= f.input :category %>
      <br>
      <%= f.input :phone_number %>
      <br>
      <%= f.submit "Add a Restaurant", class: "btn btn-success" %>
    <% end %>
</div>
